<div id="nav" class='nav'>
    <img
      class="nav_logo"
      src="./netflix_logo.png"
      alt="Netflix Logo"
    />
    <img
      class="nav_avatar"
      src="./user_logo.png"
      alt="Netflix Logo"
    />
</div>
<script>
    window.addEventListener("scroll", () => {
        const navElement = document.getElementById('nav')
      if (window.scrollY > 100) {
        navElement.classList.add("nav_black");
      } else navElement.classList.remove("nav_black");;
    });
</script>
<style>
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 10px 28px;
  height: 50px;
  z-index: 1;
  transition-timing-function: ease-in;
  transition: all 0.5s;
}

.nav_black {
  background-color: #111;
}

.nav_logo {
  position: fixed;
  left: 45px;
  top: 20px;
  height: 25px;
  width: auto;
  object-fit: contain;
}

.nav_avatar {
  position: fixed;
  right: 45px;
  top: 12.5px;
  height: 35px;
  width: auto;
  object-fit: contain;
  border-radius: 2px;
}
</style>